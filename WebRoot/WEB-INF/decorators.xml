<?xml version="1.0" encoding="UTF-8"?>  
<decorators defaultdir="/layouts/">  
 <!-- 不需要过滤的请求 -->  
 <excludes>  
  <pattern>/static/*</pattern>  
  <pattern>/login/*</pattern>  
  <!-- <pattern>/demo/goGant</pattern>   -->
 </excludes>  
 <!-- 定义装饰器要过滤的页面 -->  
 <decorator name="template" page="template.jsp">  
       <pattern>/go/*</pattern> 
       <pattern>/login/*</pattern> 
       <pattern>/user/*</pattern> 
       <pattern>/qrtz/*</pattern> 
       <pattern>/warn/*</pattern> 
       <pattern>/order/*</pattern> 
       <pattern>/remind/*</pattern> 
       <pattern>/test/*</pattern>   
       <pattern>/demo/*</pattern>  
       <pattern>/task/*</pattern>   
       <pattern>/menu/*</pattern>   
 </decorator>     
 
 <decorator name="template" page="template-NoTitle.jsp">    
       <pattern>/demo/goGant</pattern>   
 </decorator>    
</decorators> 